<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/l"
    tools:context="com.drmas.issam.photoblog.NotificationActivity">


    <TextView
        android:text="@string/notification_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/mainBtnNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="70dp"
            android:layout_marginRight="70dp"
            android:background="@color/cardview_light_background"
            android:contentDescription="@string/account"
            android:onClick="homeClicked"
            android:src="@drawable/ic_home_blue_24dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:contentDescription="@string/notification"
            android:onClick="notificationClicked"
            android:src="@drawable/ic_notifications_blue_24dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginStart="70dp"
            android:background="@color/cardview_light_background"
            android:contentDescription="@string/home"
            android:onClick="accountClicked"
            android:src="@drawable/ic_person_black_24dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
