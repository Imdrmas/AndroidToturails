<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    tools:context="com.drmas.issam.socialmedia.UpdateActivity">

    <ImageButton
        android:id="@+id/imageButtonUpdate"
        android:onClick="imageButtonUpdateClicked"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/edit_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:contentDescription="@string/image"
        android:layout_marginStart="40dp"/>

    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:id="@+id/editTextUpdateName"
        android:background="@drawable/editshape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_title"/>

    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:id="@+id/editTextUpdateDesc"
        android:background="@drawable/editshape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_description"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_style"
        android:onClick="submitButtonUpdateClicked"
        android:text="@string/submit"
        android:textAllCaps="false"
        android:textSize="24sp" />

</LinearLayout>
