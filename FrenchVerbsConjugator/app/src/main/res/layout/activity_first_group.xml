<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    android:orientation="vertical"
    tools:context=".FirstGroupActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <android.support.v7.widget.Toolbar
            android:id="@+id/firstGroupToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#60a3bc"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/exercises_1er_groupe"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold" />

        </android.support.v7.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBlack" />

        <LinearLayout
            android:padding="10dp"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/cardview_light_background"
                android:clickable="true"
                android:focusable="true"
                android:paddingTop="10dp"
                app:cardElevation="5dp">

                <ImageButton
                    android:contentDescription="@string/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_correct" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/counterQuestionFrist"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:background="@drawable/question_counter"
                android:gravity="center"
                android:hint="@string/_100"
                android:padding="5dp"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold" />


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorWhite"
                android:clickable="true"
                android:focusable="true"
                android:paddingTop="10dp"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardElevation="5dp">

                <ImageButton
                    android:contentDescription="@string/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_incorrect" />

            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:paddingBottom="5dp"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textCorrectCountFrist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_question_style"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/_100"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="90dp"
                android:text="@string/question"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/textWrongCountFrist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_question_style"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/_100"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_background"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="10dp"
            app:cardElevation="5dp">

      <LinearLayout
          android:layout_margin="1dp"
          android:background="#f1f2f6"
          android:padding="10dp"
          android:layout_width="match_parent"
          android:layout_height="150dp"
          android:orientation="vertical">

          <TextView
              android:id="@+id/textQuestionFrist"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/question"
              android:textColor="@color/colorBlack"
              android:textSize="16sp" />

          <TextView
              android:id="@+id/textAnswerFrist"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="#1abc9c"
              android:textSize="16sp"
              android:textStyle="bold" />

      </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textNextFrist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="end"
            android:onClick="textNextFirst"
            android:text="@string/next"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_answer_style"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/ic_first_answer"
                    android:paddingTop="18dp"
                    android:text="@string/_1"
                    android:textColor="#F8EBC3"
                    android:textSize="18sp" />

                <TextView
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="btnClickedFirst"
                    android:id="@+id/txtOneFirst"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:foregroundGravity="top"
                    android:gravity="top"
                    android:paddingTop="10dp"
                    android:text="@string/question"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_answer_style"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/ic_first_answer"
                    android:paddingTop="18dp"
                    android:text="@string/_2"
                    android:textColor="#F8EBC3"
                    android:textSize="18sp" />

                <TextView
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="btnClickedFirst"
                    android:id="@+id/txtTwoFirst"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="@string/question"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_answer_style"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/ic_first_answer"
                    android:paddingTop="18dp"
                    android:text="@string/_3"
                    android:textColor="#F8EBC3"
                    android:textSize="18sp" />

                <TextView
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="btnClickedFirst"
                    android:id="@+id/txtThreFirst"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="@string/question"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite">

            <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adViewFirstGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-7401879888732563/8371161842">
            </com.google.android.gms.ads.AdView>
        </LinearLayout>

    </TableLayout>

</ScrollView>
