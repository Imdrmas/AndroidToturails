<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.drmas.issam.mywords.MainActivity">


    <LinearLayout
        android:id="@+id/body"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/txtWord"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:padding="15dp"
            android:scrollbars="vertical"
            android:text="@string/write_here" />

        <LinearLayout
            android:id="@+id/body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp"
            android:layout_marginTop="15sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt"
                android:layout_width="1sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/size"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtSize"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/_14"
                android:textColor="#000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_Plus"
                android:layout_width="1sp"
                android:layout_height="40sp"
                android:layout_marginEnd="5sp"
                android:layout_marginRight="5sp"
                android:layout_weight="1"
                android:background="@drawable/btn_style"
                android:text="@string/plus"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_Mins"
                android:layout_width="1sp"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:background="@drawable/btn_style"
                android:text="@string/mins"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/cbx_Bold"
                android:layout_width="1sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/bold"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/cbx_Line"
                android:layout_width="1sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/line"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/body3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="1sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/color"
                android:textColor="#000"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/sColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/body4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="1sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/font"
                android:textColor="#000"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/sFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/body5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:text="@string/almignment"
                android:textColor="#000"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/rdo_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdi_LR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="@string/right_to_lift" />

                <RadioButton
                    android:id="@+id/rdi_RL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/lift_to_right" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/body7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/file_name"
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtFileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textMultiLine"
                android:text="@string/fileName"
                android:textColor="?attr/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/body8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_New"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/btn_style"
                android:text="@string/news"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_Save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/btn_style"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_getFile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/btn_style"
                android:text="@string/get_file"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </LinearLayout>




        </LinearLayout>

</android.support.constraint.ConstraintLayout>
